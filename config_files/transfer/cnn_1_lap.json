{
    "dataset_reader": {
        "type": "semeval2016",
        "target_domain": "lap",
        "out_domain_weight": 0.5,
        "multitask": false
    },
    "train_data_path": "res:data/res.v2/0/train.tsv@@@lap:data/lap.v2/0/train.tsv",
    "validation_data_path": "data/lap.v2/0/valid.tsv",
    "test_data_path": "data/lap.v2/0/test.tsv",
    "evaluate_on_test": false,
    "model": {
        "type": "cnn_classifier",
        "word_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "pretrained_file": "embeddings/GloVe/glove.6B.100d.txt.gz",
                    "embedding_dim": 100,
                    "trainable": false
                }
            }
        },
        "encoder": {
            "type": "cnn",
            "embedding_dim": 100,
            "num_filters": 100,
            "ngram_filter_sizes": [3, 4, 5]
        },
        "classifier_feedforward": {
            "input_dim": 300,
            "num_layers": 2,
            "hidden_dims": [50, 6],
            "activations": ["relu", "linear"],
            "dropout": [0.5, 0.0]
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["sentence", "num_tokens"]],
        "batch_size": 64
    },
    "trainer": {
        "num_epochs": 30,
        "cuda_device": -1,
        "grad_clipping": 5.0,
        "validation_metric": "+macro_f1",
        "optimizer": {
            "type": "adam",
            "weight_decay": 0
        }
    }
}
